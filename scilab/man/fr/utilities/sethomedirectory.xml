<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE MAN SYSTEM "../../manrev.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>

  <TITLE>sethomedirectory</TITLE>

  <TYPE>Scilab Function</TYPE>

  <DATE>2005</DATE>

  <SHORT_DESCRIPTION name="sethomedirectory">Set ScicosLab home
  directory</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>[home,scicoslabhome]=sethomedirectory()</CALLING_SEQUENCE_ITEM>

    <CALLING_SEQUENCE_ITEM>[home,scicoslabhome]=sethomedirectory(homepath)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>home</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: a string</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>

    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>scicoslabhome</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: a string (value of SCIHOME environment variable)</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>

    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>homepath</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: home path (a string)</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>

  <DESCRIPTION>
    <P>Set ScicosLab home path : "SCIHOME" variable.</P>

    <P>On Windows, C:/Documents and
    Settings/&lt;User&gt;/ScicosLab/&lt;ScicosLab-Version&gt;</P>

    <P>On Unix, /home/&lt;User&gt;/.ScicosLab/&lt;ScicosLab-Version&gt;</P>
  </DESCRIPTION>

  <AUTHOR>Allan CORNET</AUTHOR>
</MAN>